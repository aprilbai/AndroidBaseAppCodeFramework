<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sign_bg">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_sign_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:layout_above="@+id/tv_login"
        android:background="@drawable/login_btn_shape"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/register"/>

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:padding="8dp"
        android:textColor="@color/white"
        android:layout_above="@+id/tv_qq"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="40dp"
        android:text="@string/login"/>

    <ImageView
        android:id="@+id/tv_wechat"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:src="@mipmap/ic_wechat"
        android:layout_toLeftOf="@+id/tv_qq"
        android:layout_toStartOf="@+id/tv_qq"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/tv_qq"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:src="@mipmap/ic_qq"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:contentDescription="@string/app_name" />

    <ImageView
        android:id="@+id/tv_weibo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:src="@mipmap/ic_weibo"
        android:layout_toRightOf="@+id/tv_qq"
        android:layout_toEndOf="@+id/tv_qq"
        android:contentDescription="@string/app_name" />
</RelativeLayout>